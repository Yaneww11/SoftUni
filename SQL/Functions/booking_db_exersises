-- Arithmetical Operators
CREATE TABLE 
	bookings_calculation
AS
SELECT
	booked_for,
	CAST(booked_for * 50 AS NUMERIC) AS multiplication,
	CAST(booked_for % 50 AS NUMERIC) AS modulo
FROM
	bookings
WHERE
	bookings.apartment_id = 93;

-- ROUND vs TRUNC
SELECT 
	latitude,
	ROUND(latitude, 2),
	TRUNC(latitude, 2)
FROM apartments;

-- Absolute Value
SELECT 
	longitude,
	ABS(longitude)
FROM apartments;
